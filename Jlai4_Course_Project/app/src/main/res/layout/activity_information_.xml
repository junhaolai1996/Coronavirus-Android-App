<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Information_Activity">

    <TextView
        android:text="Information Page"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:height="50dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:text="Learn About Coronavirus"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Coronavirus (SARS-CoV-2) is a new virus that originated from China. This virus impacts the human lungs and are very fatal to those with pre-existing health conditions."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Protect Yourself"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="* Stay at home if possible.\n* Wash your hands frequently.\n* Wear mask when you go out.\n* Distance yourself 6 feet from others."
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:text="SYMPTOMS"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="* Fever or chills\n* Cough\n* Fatigue\n* Headache\n* Body aches\n* Shortness of breath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="Emergency Contact"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="If you are experiencing any of the symptoms or believe to have been in contact with someone infected with COVID. Please schedule a COVID test at your nearest health care center. \n\nIf there is a medical emergency, please contact 911."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>