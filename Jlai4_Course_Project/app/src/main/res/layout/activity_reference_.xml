<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reference_Activity">

    <TextView
        android:text="Reference Page"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:height="50dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text=" - CoronaVirus Photo:\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:text="https://www.statnews.com/2020/02/11/disease-caused-by-the-novel-coronavirus-has-name-covid-19/"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text=" - Info about Covid:\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:text="https://www.cdc.gov/"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text=" - Covid Map:\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:text="https://coronavirus.jhu.edu/us-map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text=" - API:\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:text="https://documenter.getpostman.com/view/10808728/SzS8rjbc \n\nhttps://documenter.getpostman.com/view/11144369/Szf6Z9B3?version=latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>







</LinearLayout>